<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miamivineyard.sagrariogrullon.mvcc_volunteer_management_app.HomeActivity"
    android:background="@drawable/wine"
    >

    <ImageView
        android:id="@+id/imageView"
        app:srcCompat="@drawable/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgbtnSchedule"
        app:srcCompat="@drawable/schedule"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_above="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="39dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imgbtnTraining"
        app:srcCompat="@drawable/training"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgbtnSchedule"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imgbtnBulletinBoard"
        app:srcCompat="@drawable/bulletin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgbtnTraining"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imgbtnPrayerRequest"
        app:srcCompat="@android:drawable/ic_dialog_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgbtnSocial"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgbtnDevotionals"
        app:srcCompat="@android:drawable/ic_menu_compass"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignBottom="@+id/imgbtnPrayerRequest"
        android:layout_alignRight="@+id/imgbtnGive"
        android:layout_alignEnd="@+id/imgbtnGive" />

    <ImageButton
        android:id="@+id/imgbtnPodcasts"
        app:srcCompat="@drawable/podcast"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_above="@+id/imgbtnSocial"
        android:layout_alignLeft="@+id/imgbtnSocial"
        android:layout_alignStart="@+id/imgbtnSocial"
        android:layout_marginBottom="21dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imgbtnGive"
        app:srcCompat="@drawable/give"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgbtnPodcasts"
        android:layout_alignLeft="@+id/imgbtnBulletinBoard"
        android:layout_alignStart="@+id/imgbtnBulletinBoard"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/imgbtnSocial"
        app:srcCompat="@android:drawable/ic_menu_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imgbtnSchedule"
        android:layout_alignStart="@+id/imgbtnSchedule" />
</RelativeLayout>

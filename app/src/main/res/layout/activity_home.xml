<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miamivineyard.sagrariogrullon.mvcc_volunteer_management_app.HomeActivity"
    android:background="@drawable/wine"
    >

    <ImageView
        android:id="@+id/imgvwHomeIcon"
        app:srcCompat="@drawable/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgbtnBulletinBoard"
        app:srcCompat="@drawable/bulletin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_alignTop="@+id/imgbtnTraining"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp"
        android:scaleType="centerCrop"
        android:background="?android:attr/colorControlHighlight" />

    <ImageButton
        android:id="@+id/imgbtnGive"
        app:srcCompat="@drawable/give"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@+id/imgvwHomeIcon"
        android:layout_alignLeft="@+id/imgbtnBulletinBoard"
        android:layout_alignStart="@+id/imgbtnBulletinBoard"
        android:background="?android:attr/colorControlHighlight"
        android:cropToPadding="false" />

    <TextView
        android:text="@string/txtvwHomeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblHomeHeader"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:typeface="sans"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imgbtnGive"
        android:layout_alignLeft="@+id/imgvwHomeIcon"
        android:layout_alignStart="@+id/imgvwHomeIcon" />

    <ImageButton
        android:id="@+id/imgbtnSchedule"
        app:srcCompat="@drawable/schedule"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:scaleType="fitCenter"
        android:background="?android:attr/colorControlHighlight"
        android:layout_below="@+id/lblHomeHeader"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imgbtnTraining"
        app:srcCompat="@drawable/training"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="?android:attr/colorControlHighlight"
        android:layout_below="@+id/lblHomeHeader"
        android:layout_alignLeft="@+id/imgbtnPrayerRequest"
        android:layout_alignStart="@+id/imgbtnPrayerRequest" />

    <ImageButton
        android:id="@+id/imgbtnSocial"
        app:srcCompat="@drawable/social"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="?android:attr/colorControlHighlight"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imgbtnSchedule"
        android:layout_alignStart="@+id/imgbtnSchedule" />

    <ImageButton
        android:id="@+id/imgbtnPrayerRequest"
        app:srcCompat="@drawable/request2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="?android:attr/colorControlHighlight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imgbtnDevotionals"
        app:srcCompat="@drawable/devo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="?android:attr/colorControlHighlight"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imgbtnGive"
        android:layout_alignStart="@+id/imgbtnGive" />

    <ImageButton
        android:id="@+id/imgbtnPodcasts"
        app:srcCompat="@drawable/podcast"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="?android:attr/colorControlHighlight"
        android:layout_alignBottom="@+id/imgvwHomeIcon"
        android:layout_alignLeft="@+id/imgbtnSchedule"
        android:layout_alignStart="@+id/imgbtnSchedule" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_social_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miamivineyard.sagrariogrullon.mvcc_volunteer_management_app.SocialMediaActivity"
    android:background="@drawable/wine">

    <TextView
        android:id="@+id/txtvwHeader"
        android:text="@string/ht_sharethelove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtvwTwitter"
        android:text="@string/TwitterProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_above="@+id/imgbtnInstagram"
        android:layout_alignLeft="@+id/txtvwFacebook"
        android:layout_alignStart="@+id/txtvwFacebook"
        android:layout_marginBottom="13dp"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/imgbtnVimeo"
        app:srcCompat="@drawable/vimeo"
        android:contentDescription="@string/lbl_vimeo_handle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imgbtnInstagram"
        android:layout_alignLeft="@+id/imgbtnInstagram"
        android:layout_alignStart="@+id/imgbtnInstagram"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/txtvwVimeo"
        android:text="@string/VimeoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/imgbtnVimeo"
        android:layout_alignLeft="@+id/txtvwInstagram"
        android:layout_alignStart="@+id/txtvwInstagram"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtvwInstagram"
        android:text="@string/InstagramProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_above="@+id/imgbtnVimeo"
        android:layout_alignLeft="@+id/txtvwTwitter"
        android:layout_alignStart="@+id/txtvwTwitter"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black" />

    <ImageButton
        android:id="@+id/imgbtnInstagram"
        app:srcCompat="@drawable/instagram"
        android:contentDescription="@string/lbl_instagram_handle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imgbtnTwitter"
        android:layout_alignLeft="@+id/imgbtnTwitter"
        android:layout_alignStart="@+id/imgbtnTwitter"
        android:layout_marginTop="11dp" />

    <ImageButton
        android:id="@+id/imgbtnTwitter"
        app:srcCompat="@drawable/twitter"
        android:contentDescription="@string/lbl_twitter_handle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imgbtnFacebook"
        android:layout_alignLeft="@+id/imgbtnFacebook"
        android:layout_alignStart="@+id/imgbtnFacebook"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/imgbtnFacebook"
        app:srcCompat="@drawable/facebook"
        android:contentDescription="@string/lbl_facebook_handle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        android:elevation="0dp"
        android:layout_below="@+id/txtvwHeader"
        android:layout_toLeftOf="@+id/txtvwHeader"
        android:layout_toStartOf="@+id/txtvwHeader" />

    <TextView
        android:id="@+id/txtvwFacebook"
        android:text="@string/FacebookProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/imgbtnTwitter"
        android:layout_toRightOf="@+id/imgbtnFacebook"
        android:layout_toEndOf="@+id/imgbtnFacebook" />

    <ImageButton
        android:id="@+id/imgbtnYouTube"
        app:srcCompat="@drawable/youtube"
        android:contentDescription="@string/lbl_youtube_handle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/imgbtnVimeo"
        android:layout_alignLeft="@+id/imgbtnVimeo"
        android:layout_alignStart="@+id/imgbtnVimeo" />

    <TextView
        android:id="@+id/txtvwYouTube"
        android:text="@string/YouTubeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/imgbtnYouTube"
        android:layout_toRightOf="@+id/imgbtnYouTube"
        android:layout_toEndOf="@+id/imgbtnYouTube" />

</RelativeLayout>
